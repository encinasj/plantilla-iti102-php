{% extends 'partials/layout.twig' %}
{% block conten %}
    <div class="page-header">
        <div class="pull-right">
            <a href="{{'mantenimiento/permisos/'}}"> </a>
            <a href="{{ 'mantenimiento/usuarios/agregaru'|url }}" class="btn btn-success"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>
        </div>
        <h4>Catalogo de Usuarios</h4>
        <div class="clearfix"></div>
    </div>
    <table class="table table-condensed table-bordered table-hover">
        <thead>
            <tr class="text-center">
                <td>Nombre</td>
                <td>Apellido</td>
                <td>Email</td>
                <td>Rol</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
        {% for usuario in usuarios %}
            <tr class="text-center">
                <td>{{ usuario.nombre }}</td>
                {#<td>{{ usuario.apaterno }} {{ usuario.amaterno }}</td>#}
                <td>{{ usuario.apaterno ~ ' ' ~ usuario.amaterno }}</td>
                <td>{{ usuario.correo }}</td>
                <td>{{ usuario.rol.nombre }}</td>
                <td>
                    <a href="{{ "mantenimiento/usuarios/actualizaru/#{usuario.id}"|url }}" type="button" class="btn btn-primary">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>
                    <a href="{{ ('mantenimiento/usuarios/eliminaru/' ~ usuario.id)|url }}" type="button" class="btn btn-danger">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </a>
                </td>
            </tr>
        {% endfor %}
        <tr>
            <td class="text-right" colspan="5">
                Total de registros encontrados: {{ usuarios|length }}
            </td>
        </tr>
        </tbody>
    </table>
{% endblock %}
