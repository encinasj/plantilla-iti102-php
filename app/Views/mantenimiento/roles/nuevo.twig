{% extends 'partials/layout.twig' %}
{% block conten %}
    <div class="page-header">
        <h4>Ficha de Registro de Roles</h4>
    </div>
    <form action="{{ 'mantenimiento/roles/guardarr'|url }}" method="post">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group"><label for="">Nombre</label></div>
                <input type="text" name="nombre" placeholder="Ingrese el nombre del rol" class="form-control">
                <label data-key="nombre" class="form-validation-failed requireed"></label>
            </div>
        </div>
        <div class="row">
            <div class="text-right">
                <a href="{{ 'mantenimiento/roles/'|url }}" class="btn btn-default">Cancelar</a>
                <button data-ajax="true" class="btn btn-primary" type="submit">Guardar</button>
            </div>
        </div>
    </form>
{% endblock %}