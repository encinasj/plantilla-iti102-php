{% extends 'partials/layout.twig' %}
{% block conten %}
    <div class="page-header">
        <div class="pull-right">
            <a href="{{ 'mantenimiento/roles/agregarr'|url }}" class="btn btn-success"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>
        </div>
        <h4>Catalogo de Roles</h4>
        <div class="clearfix"></div>
    </div>

    <table class="table table-condensed table-bordered table-hover">
        <thead>
        <tr class="text-center">
            <td>Nombre Rol</td>
            <td></td>
        </tr>
        </thead>
        <tbody>
            {% for rol in roles %}
                <tr class="text-center">
                    <td>{{ rol.nombre }}</td>
                    <td>
                        <a href="{{ 'mantenimiento/roles/actualizarr/'|url }}{{ rol.id }}" class="btn btn-primary" type="button"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                        <a href="{{ 'mantenimiento/roles/eliminarr/'|url }}{{ rol.id }}" class="btn btn-danger" type="button"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                    </td>
                </tr>
            {% endfor %}
            <tr>
                <td class="text-right" colspan="5">
                    Total de registros encontrados: {{ roles|length }}
                </td>
            </tr>
        </tbody>
    </table>
{% endblock %}