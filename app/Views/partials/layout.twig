<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="{{ 'bower_components/bootstrap/dist/css/bootstrap.min.css'|public }}">
    <link rel="stylesheet" href="{{ 'bower_components/bootstrap/dist/css/bootstrap-theme.min.css'|public }}">
    <link rel="stylesheet" href="{{ 'node_modules/@fortawesome/fontawesome-free/css/all.min.css'|public }}">
    <link rel="stylesheet" href="{{ 'css/main.css'|public }}">
    <link rel="stylesheet" href="{{ 'css/styles.css'|public }}?{{ 'now'|date('U') }}">
    <title>{{ title }}</title>
</head>
<body>
    <div class="container">
        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">
                        <img id="logoimage" alt="Brand" src="{{ 'img/logo.png'|public }}">
                    </a>
                </div>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="{{ 'home'|url }}">Inicio</a></li>
                    <li><a href="{{ 'home/productos'|url }}">Productos</a></li>
                    <li><a href="{{ 'home/nosotros'|url }}">Quienes somos</a></li>
                    <li><a href="{{ 'home/contacto'|url }}">Contactanos</a></li>
                    <li><a href="{{ 'mantenimiento'|url }}">Mantenimiento</a></li>
                </ul>
            </div>
        </nav>
        {% block conten %}{% endblock %}
    </div>
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <p id="rights" class="text-muted">Â© 2018 Encinas All Rights Reserved</p>
                </div>
                <div id="social-networks" class="col-md-2 col-md-offset-6">
                    <a href="" target="_blank">
                        <i class="fab fa-instagram icons"></i>
                    </a>
                    <a href="https://twitter.com/encinasjangel" target="_blank">
                        <i class="fab fa-twitter-square icons"></i>
                    </a>
                </div>
            </div>
        </div>
    </footer>
    <script type="text/javascript" src="{{ 'bower_components/jquery/dist/jquery.min.js'|public }}"></script>
    <script type="text/javascript" src="{{ 'bower_components/bootstrap/dist/js/bootstrap.min.js'|public }}"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="{{ 'node_modules/sweetalert/dist/sweetalert.min.js'|public }}"></script>
    <script type="text/javascript" src="{{ 'bower_components/jquery-form/dist/jquery.form.min.js'|public }}"></script>
    <script src="{{ 'js/ini.js'|public}}"></script>
    <script>
        function base_url(url){
            url = url || '';
            return '{{ ''|url }}' + url;
        }
        function redirect(url){
            url = url || '';
            window.location.href = base_url(url);
        }
    </script>
    {% block script %}{% endblock %}
</body>
</html>
